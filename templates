    <source src="/static/pexels2.mp4" type="video/mp4">
  </video>
  


  <div class="container">
    <h1>Voice-GPT</h1>
    <button id="recordButton">Aufnahme starten</button>
    <div id="result"></div>
    <form id="correctionForm" style="display: none;">
      <input type="text" id="correctionText" placeholder="Korrektur eingeben">
      <button type="submit" id="submitButton">Absenden</button>
